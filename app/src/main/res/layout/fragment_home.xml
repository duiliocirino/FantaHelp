<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".view.ui.HomeFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="815dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.5">

        <HorizontalScrollView
                android:layout_width="355dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toTopOf="parent" android:id="@+id/horizontalScrollView2">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                <Button
                        android:text="K"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/button12" android:layout_weight="1"/>
                <Button
                        android:text="D"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/button13" android:layout_weight="1"/>
                <Button
                        android:text="M"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/button14" android:layout_weight="1"/>
                <Button
                        android:text="A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/button15" android:layout_weight="1"/>
            </LinearLayout>
        </HorizontalScrollView>
        <TextView
                android:text="@string/display_choice"
                style="@style/NormalStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView2"/>
        <AutoCompleteTextView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="player"
                android:ems="10"
                android:id="@+id/playerSearchBar"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3"/>
        <TextView
                android:text="decision"
                style="@style/HomeStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView4"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/playerSearchBar" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="64dp"/>
        <TextView
                android:text="0"
                style="@style/HomeStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView5"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/playerSearchBar"
                app:layout_constraintEnd_toStartOf="@+id/textView6"
                android:layout_marginEnd="32dp"/>
        <TextView
                android:text="0"
                style="@style/HomeStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView6"
                android:layout_marginEnd="64dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/playerSearchBar"/>
        <TextView
                android:text="current USER's bet"
                style="@style/NormalStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView7"
                android:layout_marginTop="64dp"
                app:layout_constraintTop_toBottomOf="@+id/playerSearchBar" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
        <EditText
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editTextNumber"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                android:layout_marginStart="32dp" app:layout_constraintStart_toEndOf="@+id/button6"
                app:layout_constraintEnd_toStartOf="@+id/button5" android:layout_marginEnd="32dp"/>
        <Button
                android:text="+1"
                style="@style/MathButtons"
                android:layout_width="64dp"
                android:layout_height="64dp" android:id="@+id/button5"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView7"
                app:layout_constraintEnd_toStartOf="@+id/button7" android:layout_marginEnd="16dp"/>
        <Button
                android:text="+5"
                style="@style/MathButtons"
                android:layout_width="64dp"
                android:layout_height="64dp" android:id="@+id/button7"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView7"
                android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"/>
        <Button
                android:text="-1"
                style="@style/MathButtons"
                android:layout_width="64dp"
                android:layout_height="64dp" android:id="@+id/button6"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView7"
                android:layout_marginStart="16dp" app:layout_constraintStart_toEndOf="@+id/button8"/>
        <Button
                android:text="-5"
                style="@style/MathButtons"
                android:layout_width="64dp"
                android:layout_height="64dp" android:id="@+id/button8"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView7"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
        <Button
                android:text="bet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button9"
                android:layout_marginEnd="64dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/button5"/>
        <Button
                android:text="pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button10"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/button6"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="64dp"/>
        <Spinner
                android:layout_width="180dp"
                android:layout_height="wrap_content" android:id="@+id/spinner"
                android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/button10"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp"/>
        <Button
                android:text="assign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button11"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/button9" android:layout_marginEnd="64dp"
                app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>